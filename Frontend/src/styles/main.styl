@require 'constants.styl'

*
    box-sizing border-box

body
    margin 0
    overflow-x hidden
    overflow-y scroll
    min-height 100vh
    background bgColor

    font-family Helvetica
    font-size 19px
    font-weight normal
    color textColor1

#app
    width 100%
    height 100vh
    position relative


.mobile-only
    display none !important
@media screen and (max-width: 700px) {
    .desktop-only {
        display: none !important;
    }
    .mobile-only {
        display: inline-block !important;
    }
}


a
    text-decoration none
    color textColorBlue
    transition color 0.3s ease
a:hover
    color textColor1


.back-button
    border-radius 50%
    opacity 0.6
    cursor pointer
    transition all 0.15s ease
    overflow visible
.back-button:hover
    opacity 1


.submit-buttons
    display flex
    justify-content space-between
    .button
    button
        all unset
        margin-top 20px
        float right
        width 120px
        background bgColor3
        padding 7px
        text-align center
        cursor pointer
        border-radius radiusS
    .button.danger
    button.danger
        background bgColor2


.plate
    padding 20px 20px
    background mix(bgColor, transparent, 60%)
    border 1px solid textColor5
    border-radius radiusS
